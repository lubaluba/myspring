<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
  
  	<bean id="petStore" class="org.litespring.service.v3.PetStoreService" >  
        <constructor-arg ref="accountDao"></constructor-arg>
        <constructor-arg ref="itemDao" name="itemDao"></constructor-arg>
        <constructor-arg value="1" name="version"></constructor-arg>
  	</bean> 
  	
 	<bean id="accountDao" class="org.litespring.dao.v3.AccountDao"></bean>
 	
 	<bean id="itemDao" class="org.litespring.dao.v3.ItemDao"></bean>
</beans>